<%- include('adminHeader')-%>

<!-- Navbar Start- -->
<div class="row bg-body-transparent">
    <div class="container">
      <nav class="navbar navbar-expand-lg px-5 pt-3">
          <img src="images/LogoLight.png" alt="Bootstrap" width="40" height="24">
          <a class="navbar-brand ps-2" href="#">Guided Pro</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mx-auto">
                <li class="main-nav nav-item">
                  <a class="nav-link" href="#"></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#"></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#"></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#"></a>
                </li>
              </ul>
            <button  class="btn btn-gradient text-white  my-sm-0" type="submit"><a href="/register" style="text-decoration: none; color: white;">Join</a></button>
          </div>
        </nav>
    </div>
  </div>
  <!-- Navbar End -->
  
  <!-- main  container- -->
  
  <div
    class="container d-flex justify-content-end align-items-center min-vh-80 mt-5"
  >
    <!-- login container- -->
  
    <div class="row rounded-5 p-1 bg-box box-area text-white">
  
  
      <!-- -right box- -->
      <div class="col-md-12 px-4 right-box">
        <div class="row align-items-center">
          <div class="header-text text-center mb-4">
            <h2 style="font-family: 'Outfit', sans-serif">Admin Login</h2>
            <p>Welcome back Irfan</p>
          </div>
          <% if(typeof incorrect !== 'undefined'){%>
            <div
              class="alert incorrect_alert ms-4"
              style="font-family: 'Poppins', sans-serif; font-weight: 400"
              role="alert"
            >
              <%= incorrect %>
            </div><%}%>
          <form action="" method="POST">
          <div class="input-group mb-4">
            <input
              type="email"
              name="email"
              class="form-control form-control-lg bg-light fs-6"
              placeholder="Email"
              required
              autocomplete="off"
            />
          </div>
          <div class="input-group mb-1">
            <input
              type="password"
              name="password"
              class="form-control form-control-lg bg-light fs-6"
              placeholder="Password"
            />
          </div>
          <div class="input-group mb-5 justify-content-between">
            <div class="form-check">
              <input type="checkbox" class="form-check-input" id="formCheck" />
              <label for="FormCheck" class="form-check-label text-secondary"
                ><small>Remember Me</small></label
              >
            </div>
            <div class="forgot">
              <small><a href="#">Forgot Password?</a></small>
            </div>
          </div>
          <div class="input-group mb-5 mt-4">
            <button
              class="btn rounded-5 btn-lg btn-dark w-100 fs-6 submit-btn"
              type="submit"
            >
              Sign In
            </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('adminFooter')-%>
